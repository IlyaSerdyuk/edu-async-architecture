{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "TaskCreated.v1",
  "description": "Схема CUD-события добавления задания (версия 1)",

  "definitions": {
    "event_data": {
      "type": "object",
      "properties": {
        "id":    { "type": "string" },
        "title": { "type": "string" }
      },
      "required": ["id", "title"]
    }
  },

  "type": "object",

  "properties": {
    "event_id":      { "type": "string" },
    "event_version": { "enum": [1] },
    "event_name":    { "type": "string" },
    "event_time":    { "type": "string" },
    "producer":      { "type": "string" },

    "data": { "$ref": "#/definitions/event_data" }
  },

  "required": [
    "event_id",
    "event_version",
    "event_name",
    "event_time",
    "producer",
    "data"
  ]
}
